{
  "name": "drupal/rating_scorer",
  "description": "Fair rating scorer with configurable algorithms and automatic rating module detection",
  "type": "drupal-module",
  "license": [
    "GPL-2.0-or-later"
  ],
  "homepage": "https://www.drupal.org/project/rating_scorer",
  "support": {
    "docs": "https://www.drupal.org/docs/contributed-modules/rating-scorer",
    "issues": "https://www.drupal.org/project/issues/rating_scorer"
  },
  "authors": [
    {
      "name": "Martin Postma"
    }
  ],
  "require": {
    "php": ">=8.1",
    "drupal/core": ">=10.0 <12"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0 || ^11.0",
    "drupal/core-dev": ">=10.0 <12",
    "drupal/coder": "^8.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "mglaman/phpstan-drupal": "^1.2",
    "mglaman/drupal-check": "^1.4"
  },
  "keywords": [
    "drupal",
    "rating",
    "scoring",
    "fair-ranking",
    "bayesian",
    "wilson-score"
  ],
  "scripts": {
    "phpcs": "phpcs --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml src/",
    "phpcbf": "phpcbf --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml src/",
    "phpstan": "phpstan analyse src/",
    "drupal-check": "drupal-check src/",
    "test": "phpunit --configuration phpunit.xml",
    "test:unit": "phpunit --configuration phpunit.xml --testsuite unit",
    "test:kernel": "phpunit --configuration phpunit.xml --testsuite kernel",
    "test:functional": "phpunit --configuration phpunit.xml --testsuite functional",
    "quality": [
      "@phpcs",
      "@phpstan"
    ]
  },
  "scripts-descriptions": {
    "phpcs": "Check code style against Drupal coding standards",
    "phpcbf": "Auto-fix code style issues",
    "phpstan": "Run static analysis",
    "drupal-check": "Check for deprecated code",
    "test": "Run all tests",
    "test:unit": "Run unit tests only",
    "test:kernel": "Run kernel tests only",
    "test:functional": "Run functional tests only",
    "quality": "Run all code quality checks"
  }
}
